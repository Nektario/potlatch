<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_actionbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height_x3"
    android:background="?attr/colorPrimary"
    android:gravity="bottom"
    app:navigationIcon="@drawable/ic_ab_back_white"
    app:contentInsetEnd="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:titleTextAppearance="@style/toolbar_actionbar_title"
    app:subtitleTextAppearance="@style/toolbar_actionbar_subtitle"
    />