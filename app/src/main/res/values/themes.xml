<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="FrameworkRoot.Theme" parent="Theme.AppCompat.Light.DarkActionBar" />
    <style name="FrameworkRoot.Widget" parent="Theme.AppCompat" />

    <style name="Theme.AppTheme" parent="FrameworkRoot.Theme">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="toolbarActionbarSize">@dimen/action_bar_height</item>

        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent_1</item>
        <item name="android:textColorLink">@color/theme_accent_1</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_white</item>
        <item name="homeAsUpIndicator">@drawable/ic_ab_back_white</item>
        <item name="touchForegroundColor">?android:selectableItemBackground</item>
        <item name="android:seekBarStyle">@style/SeekBarAppTheme</item>
    </style>

    <style name="Theme.NoHideActionBar" parent="Theme.AppTheme">
        <item name="windowActionBar">true</item>
    </style>

    <style name="Theme.BlackSystemBar" parent="Theme.AppTheme">
        <item name="colorPrimaryDark">#000</item>
    </style>
</resources>